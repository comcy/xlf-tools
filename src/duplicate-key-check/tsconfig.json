{
  "compileOnSave": true,
  "compilerOptions": {
    "rootDir": "src",
    "strict": true,
    "outDir": "dist",
    "sourceMap": true,
    "target": "es5",
    "module": "commonjs",
    "declaration": true,
    "noImplicitAny": false,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "lib": [
      "es2015",
      "dom"
    ],
    "baseUrl": "./",
    "typeRoots": [
      "node_modules/@types"
    ],
    "types": [
      "node"
    ],
    "paths": {
      "src/*": [
        "typescript/*"
      ]
    }
  },
  "exclude": [
    "node_modules",
    "dist",
    "build",
    "scripts",
    "spec"
  ],
  "filesGlob": [
    "./src/**/*.ts",
    "./test/**/*.ts",
    "./typings/index.d.ts",
    "./custom_typings/**/*.d.ts",
    "./node_modules/@types/**/*.d.ts"
  ]
}